dnl Process this file with autoconf to produce a configure script.

AC_REVISION($Revision: 1.23 $)

AC_INIT()

MAJOR_VERSION=0
MINOR_VERSION=6
MICRO_VERSION=00
VERSION=$MAJOR_VERSION.$MINOR_VERSION.$MICRO_VERSION
RELEASE=$MAJOR_VERSION.$MINOR_VERSION
AC_DEFINE_UNQUOTED(MICRO_VERSION, "$MICRO_VERSION")
AC_DEFINE_UNQUOTED(SYSTEM, UNIX)
AC_SUBST(VERSION)
AC_SUBST(RELEASE)

dnl AC_CANONICAL_SYSTEM

AM_INIT_AUTOMAKE(General, $RELEASE)
AM_CONFIG_HEADER(gzo-cfg.h)

AC_LANG_CPLUSPLUS

AC_C_BIGENDIAN

dnl Checks for programs.
AC_PROG_CC
AC_PROG_CXX
AC_PROG_CPP
AC_PROG_RANLIB
AM_PROG_LIBTOOL
AC_PROG_INSTALL

dnl Checks for libraries.
AC_CHECK_LIB(stdc++, main)
AC_CHECK_LIB(gmp, mpz_clear)
AC_CHECK_LIB(gtk--, main)

dnl Checks for header files.
AC_HEADER_DIRENT
AC_CHECK_HEADERS(regex.h regexp.h)
HAVE_CORBA=1
AC_CHECK_HEADER(CORBA.h, , HAVE_CORBA=0)
AC_SUBST(HAVE_CORBA)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_HEADER_STAT

dnl Checks for library functions.
AC_FUNC_FNMATCH
AC_FUNC_CLOSEDIR_VOID
AC_FUNC_STRFTIME

AC_OUTPUT([Makefile Common/Makefile X-windows/Makefile CORBA/Makefile])
