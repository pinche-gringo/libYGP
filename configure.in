dnl Process this file with autoconf to produce a configure script.

AC_REVISION($Revision: 1.18 $)

AC_INIT()

MAJOR_VERSION=0
MINOR_VERSION=5
MICRO_VERSION=11
VERSION=$MAJOR_VERSION.$MINOR_VERSION.$MICRO_VERSION
RELEASE=$MAJOR_VERSION.$MINOR_VERSION
AC_DEFINE_UNQUOTED(MICRO_VERSION, "$MICRO_VERSION")
AC_DEFINE(UNIX)
AC_SUBST(VERSION)
AC_SUBST(RELEASE)

dnl AC_CANONICAL_SYSTEM

AM_INIT_AUTOMAKE(General, $RELEASE)
dnl AM_CONFIG_HEADER(config.h)

AC_LANG_CPLUSPLUS

AC_C_CONST
AC_C_INLINE
AC_C_BIGENDIAN

dnl Checks for programs.
AC_PROG_CXX
AC_PROG_INSTALL
AM_PROG_LIBTOOL

dnl Defines for existing libraries
dnl have_gmp=false
dnl have_gtk=false
dnl have_gtk--=false

dnl Checks for libraries.
AC_CHECK_LIB(stdc++, main)
AC_CHECK_LIB(gmp, mpz_clear)
AC_CHECK_LIB(gtk, gtk_widget_get_type)
AC_CHECK_LIB(gtk--, main)
dnl AC_CHECK_LIB(gmp, mpz_clear, have_gmp=true)
dnl AC_CHECK_LIB(gtk, gtk_widget_get_type, have_gtk=true)
dnl AC_CHECK_LIB(gtk--, main, have_gtk--=true)

dnl Checks for header files.
AC_HEADER_DIRENT

dnl Checks for typedefs, structures, and compiler characteristics.

dnl Checks for library functions.
AC_FUNC_FNMATCH
AC_FUNC_CLOSEDIR_VOID

AC_OUTPUT([Makefile Common/Makefile X-windows/Makefile])
